<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include all shared preferences -->
        <include domain="sharedpref" path="."/>
        <!-- Include the main application database -->
        <include domain="database" path="main_app_database.db"/>
        <!-- Exclude any temporary files or sensitive data -->
        <exclude domain="file" path="temp_cache/"/>
        <exclude domain="sharedpref" path="api_keys_prefs.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- For device transfer, let's also include user profile images from files dir -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="main_app_database.db"/>
        <include domain="file" path="profile_images/"/>
        <!-- Still exclude sensitive data -->
        <exclude domain="sharedpref" path="api_keys_prefs.xml"/>
    </device-transfer>
</data-extraction-rules>